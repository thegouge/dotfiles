    "format": "{icon}  {temperatureC}Â°C",
    "format-icons": ["ï«", "ï‹‰", "ï©"],
    "max-length": 7,
    "min-length": 7,
    "on-click": "xsensors",
  },

  "memory": {
    "interval": 30,
    "format": "ïƒ‰  {}%",
    "on-click": "ghostty -e btop",
  },

  "network": {
    "format-wifi": "ï‡« {essid} ({signalStrength}%)",
    "format-ethernet": "{ifname}: ï–",
